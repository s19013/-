<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dining"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="50dp"
        android:background="#5BFFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/goPreGameWithComBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_style"
            android:fontFamily="sans-serif-medium"
            android:text="コンピューターと対戦  "
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/goPreGameWithManBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_style"
            android:fontFamily="sans-serif-medium"
            android:text="二人で対戦"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/goTutorialBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_style"
            android:fontFamily="sans-serif-medium"
            android:text="チュートリアル"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/goConfigBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_style"
            android:fontFamily="sans-serif-medium"
            android:maxWidth="100dp"
            android:text="@string/configText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>