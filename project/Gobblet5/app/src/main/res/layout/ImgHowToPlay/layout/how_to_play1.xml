<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    tools:context=".GameWithManActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Guideline_other_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Guideline_other_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Guideline_other_h"
        app:layout_constraintEnd_toStartOf="@+id/Guideline_other_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/configButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_style"
            android:text="@string/configText"
            android:textAllCaps="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/resaltButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_style"
            android:text="@string/ResultText"
            android:textAllCaps="false" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi2pV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi2pV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi2pH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi2pH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <TextView
        android:id="@+id/telop2p"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:background="#E6E6E6"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:paddingRight="20dp"
        android:paddingBottom="4dp"
        android:rotation="180"
        android:text="2P"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTemochi2pH3"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTemochi2pV2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineTemochi2pV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineTemochi2pH2" />

    <LinearLayout
        android:id="@+id/Temochi2p"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/guidelineTemochi2pH2"
        app:layout_constraintLeft_toRightOf="@id/guidelineTemochi2pV1"
        app:layout_constraintRight_toLeftOf="@id/guidelineTemochi2pV2"
        app:layout_constraintTop_toBottomOf="@id/Guideline_other_h">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonTemochiGreenSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/temochi_btn_style2p_small" />

            <ImageView
                android:id="@+id/buttonTemochiGreenMiddle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/temochi_btn_style2p_middle" />

            <ImageView
                android:id="@+id/buttonTemochiGreenBig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                app:srcCompat="@drawable/temochi_btn_style2p_big" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTemochiGreenSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/popup_background"
                android:gravity="center"
                android:rotation="180"
                android:text="3"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textTemochiGreenMiddle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/popup_background"
                android:gravity="center"
                android:rotation="180"
                android:text="3"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textTemochiGreenBig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/popup_background"
                android:gravity="center"
                android:rotation="180"
                android:text="3"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/having2p"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTemochi2pH2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineTemochi2pV2"
        app:layout_constraintTop_toTopOf="@+id/Guideline_other_h"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mass" />

    <TextView
        android:id="@+id/telop1p"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:autoSizeTextType="uniform"
        android:background="#E6E6E6"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:paddingRight="20dp"
        android:paddingBottom="2dp"
        android:text="1P"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTemochi1pH1"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTemochi1pV2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineTemochi1pV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineTemochi1pH3" />

    <LinearLayout
        android:id="@+id/Temochi1p"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTemochi1pH2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTemochi1pV2"
        app:layout_constraintStart_toStartOf="@+id/guidelineTemochi1pV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineTemochi1pH1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTemochiRedBig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/popup_background"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textTemochiRedMiddle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/popup_background"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="3"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textTemochiRedSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/popup_background"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonTemochiRedBig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/temochi_button1p_big" />

            <ImageView
                android:id="@+id/buttonTemochiRedMiddle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/temochi_button1p_middle" />

            <ImageView
                android:id="@+id/buttonTemochiRedSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/temochi_button1p_small" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/having1p"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTemochi1pH2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTemochi1pV1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineTemochi1pH1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mass" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi1pV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi1pV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi1pH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi1pH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTemochi1pH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/BordGuidelineH2"
        app:layout_constraintEnd_toStartOf="@+id/BordGuidelineV2"
        app:layout_constraintStart_toStartOf="@+id/BordGuidelineV1"
        app:layout_constraintTop_toTopOf="@+id/BordGuidelineH1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonA1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonB1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonC1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonD1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonA2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonB2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonC2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonD2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonA3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonB3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonC3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonD3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonA4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonB4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonC4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:srcCompat="@drawable/mass" />

            <ImageView
                android:id="@+id/buttonD4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/mass" />

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/BordGuidelineV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/BordGuidelineV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/BordGuidelineH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/BordGuidelineH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.73" />

</androidx.constraintlayout.widget.ConstraintLayout>