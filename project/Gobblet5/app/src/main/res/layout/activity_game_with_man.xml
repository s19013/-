<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    tools:ignore="NestedWeights,ContentDescription,HardcodedText,TooManyViews"
    tools:context=".GameWithManActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Guideline_other_h2"
        app:layout_constraintEnd_toStartOf="@+id/Guideline_other_v2"
        app:layout_constraintStart_toStartOf="@+id/Guideline_other_v1"
        app:layout_constraintTop_toTopOf="@+id/Guideline_other_h1">

        <LinearLayout
            android:id="@+id/configButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/btn_style"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                app:srcCompat="@drawable/ic_gear" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:gravity="center"
                android:lines="1"
                app:autoSizeTextType="uniform"
                android:text="@string/configText"
                android:textColor="@color/black" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/resaltButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:autoSizeTextType="uniform"
            android:background="@drawable/btn_style"
            android:text="@string/ResultText"
            android:textAllCaps="false"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/player2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTemochi2pH2"
        app:layout_constraintEnd_toStartOf="@+id/BordGuidelineV2"
        app:layout_constraintStart_toStartOf="@+id/BordGuidelineV1"
        app:layout_constraintTop_toTopOf="@+id/guidelineTemochi2pH1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/Temochi2p"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/buttonTemochiGreenSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="5"
                        app:srcCompat="@drawable/temochi_btn_style2p_small"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/buttonTemochiGreenMiddle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="5"
                        app:srcCompat="@drawable/temochi_btn_style2p_middle" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/buttonTemochiGreenBig"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="5"
                        app:srcCompat="@drawable/temochi_btn_style2p_big" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTemochiGreenSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        app:autoSizeTextType="uniform"
                        android:background="@drawable/popup_background"
                        android:gravity="center"
                        android:rotation="180"
                        android:text="3"
                        android:textColor="@android:color/black"
                        />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textTemochiGreenMiddle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        app:autoSizeTextType="uniform"
                        android:background="@drawable/popup_background"
                        android:gravity="center"
                        android:rotation="180"
                        android:text="3"
                        android:textColor="@android:color/black" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textTemochiGreenBig"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        app:autoSizeTextType="uniform"
                        android:background="@drawable/popup_background"
                        android:gravity="center"
                        android:rotation="180"
                        android:text="3"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
