<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    枠-->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp" />
            <solid android:color="#000000" />
            <size android:width="100dp" android:height="100dp"/>
        </shape>
    </item>
    <!--    影(下)-->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="3dp" />
            <solid android:color="@color/shadow_temochi2p" />
        </shape>
    </item>
    <!--    影(右)-->
    <item>
        <shape android:shape="rectangle">
            <padding android:right="3dp" />
            <solid android:color="@color/shadow_temochi2p" />
        </shape>
    </item>
<!--    メイン-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_temochi2p" />
        </shape>
    </item>
    <item
        android:width="100dp"
        android:height="100dp"
        android:gravity="center"
        android:drawable="@drawable/koma_dark_green"
        />
</layer-list>