<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    枠-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/emphasis_btn_radius" />
            <padding
                android:left="2dp"
                android:right="1dp"
                android:top="2dp"
                android:bottom="1dp" />
            <solid android:color="#000000" />
        </shape>
    </item>
    <!--    影(下)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/emphasis_btn_radius" />
            <padding android:bottom="@dimen/emphasis_btn_padding" />
            <solid android:color="#4B6E8A"/>
        </shape>
    </item>
    <!--    影(右)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/emphasis_btn_radius" />
            <padding android:right="@dimen/emphasis_btn_padding"/>
            <solid android:color="#4B6E8A"/>
        </shape>
    </item>
    <!-- メイン -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/emphasis_btn_radius" />
            <solid android:color="#9DD4FF"/>
        </shape>
    </item>

</layer-list>