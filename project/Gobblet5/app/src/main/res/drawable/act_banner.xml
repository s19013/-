<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp"
                />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:bottom="1dp" />
            <solid android:color="#383A38"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp"
                />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:bottom="4dp" />
            <gradient
                android:angle="-90"
                android:endColor="#DCD16A"
                android:centerColor="#FFF38A"
                android:startColor="#FFF38A"
                />

        </shape>
    </item>

</layer-list>