<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    枠-->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp" />
            <solid android:color="#000000" />
        </shape>
    </item>
    <!--    影(下)-->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/buttonsShadow" />
            <solid android:color="@color/shadow" />
        </shape>
    </item>
    <!--    影(右)-->
    <item>
        <shape android:shape="rectangle">
            <padding android:right="@dimen/buttonsShadow" />
            <solid android:color="@color/shadow" />
        </shape>
    </item>
    <!-- メイン -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <solid android:color="@color/mas" />
        </shape>
    </item>
</layer-list>